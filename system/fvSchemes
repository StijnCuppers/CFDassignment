FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
    grad(R)         leastSquares;

    // limited         cellLimited Gauss linear 1;
    // grad(U)         $limited;
    // grad(k)         $limited;
    // grad(omega)     $limited;
}

divSchemes
{
    default         none;
    div(phi,R)      bounded Gauss limitedLinear 1;   // bounded 2nd-order, stable
    div(R)          Gauss linear;                    // other divergence uses

    div(phi,U)      Gauss limitedLinearV 1; //Gauss vanLeer; //Gauss linearUpwind limited;

    energy          Gauss vanLeer; //Gauss linearUpwind limited;
    div(phi,e)      $energy;
    div(phi,K)      $energy;
    div(phi,Ekp)    $energy;

    turbulence      Gauss vanLeer; //Gauss linearUpwind limited;
    div(phi,k)      $turbulence;
    div(phi,omega)  $turbulence;

    div(phiv,p)     Gauss vanLeer; //Gauss upwind;
    div((phi|interpolate(rho)),p) Gauss vanLeer; //Gauss upwind;

    div(((rho*nuEff)*dev2(T(grad(U)))))    Gauss linear;
    div((nuEff*dev2(T(grad(U))))) Gauss linear;
    div(((rho*(thermo:mu|rho))*dev2(T(grad(U))))) Gauss linear corrected;
    div((rho*R))      Gauss linear;
    div(phi,epsilon)    bounded Gauss limitedLinear 1;



}

laplacianSchemes
{
    default         Gauss linear corrected;
    //laplacian(nuEff, R) Gauss linear corrected; // if R has diffusive term with nuEff
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method          meshWave;
}

