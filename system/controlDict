FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     rhoSimpleFoam;

startFrom       startTime;
startTime       0;

stopAt          endTime;
endTime         1000;         // Max number of ITERATIONS

deltaT          1;            // Must be 1 for steady-state

writeControl    timeStep;
writeInterval   100;

purgeWrite      0;
writeFormat     ascii;
writePrecision  8;
runTimeModifiable yes;

